    <li>
      <div class="logo-wrapper waves-light">
        <p class="lead">Foreman DCIM Portal</p>
        <p class="black-text">Admin Page</p>
      </div>
    </li>

        <!-- Side navigation links -->
    <li>
      <ul class="collapsible collapsible-accordion">
        <li id="<%= parent_menu('bmc_scan_requests') || parent_menu('brute_lists') %>">
