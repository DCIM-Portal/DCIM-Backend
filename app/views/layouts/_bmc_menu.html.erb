        <ul id="nav-mobile" class="right">
          <li class="active">
            <a class="nav-menu"><i class="fa fa-desktop" aria-hidden="true"></i> <span class="hidden-sm-down">Admin <span class="sr-only">(current)</span></span></a>
          </li>
