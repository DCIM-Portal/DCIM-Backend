      </ul>
    </li>
    <li class="direct_link">
      <%= link_to '<i class="fa fa-server"></i>Scanned BMC Hosts'.html_safe, bmc_hosts_path, class: is_active('bmc_hosts') %>
    </li>
    <li class="direct_link">
      <%= link_to '<i class="fa fa-building-o"></i>Datacenter Zones'.html_safe, zones_path, class: is_active('zones') %>
    </li>

  </ul>

  <!--Navbar-->

  <div class="navbar-fixed navbar">
    <nav class="black-text grey lighten-2 text-uppercase z-depth-2">
      <div class="float-xs-left">
        <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
      </div>
      <div class="nav-wrapper">
        <div class="left bc_nav hide-on-med-and-down">
          <%= render_breadcrumbs separator: " / " %>
