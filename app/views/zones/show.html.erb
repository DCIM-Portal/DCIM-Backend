<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3 class="show_title text-left text-uppercase">Zone "<em><%= @zone.name %></em>" Details</h3>
      <%= link_to 'Back', zones_path, class: 'btn btn-default' %>
      <div class="pull-right">
        <p class="time_dock">*All Times are US Central</p>
      </div>
      <div class="panel panel-default">
        <div class="well">
          <div class="table-responsive">
            <table class="table table-striped table-condensed">
              <thead>
                <tr>
                  <th>Zone ID</th>
                  <th>Zone Name</th>
                  <th>Last Updated</th>
                  <th></th>
                </tr>
              </thead>
            <tbody>
              <tr>
                <td><%= @zone.id %></td>
                <td><%= best_in_place @zone, :name %></td>
                <td><%= I18n.l @zone.updated_at, format: :pretty %></td>
                <td><%= link_to 'Delete', @zone, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger', id: "delete_disable_#{@zone.id}" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="overlay">
      <div class="inner-overlay">
        <i class="fa fa-refresh fa-2x fa-spin"></i>
        <p>Loading Data...</p>
      </div>
    </div>
    <div class="panel panel-default" id="main_header">
    <div class="panel-heading">Hosts in this Zone</div>
      <div class="panel-body">
        <table id="zone_detail_table" class="table table-condensed table-striped" width="100%" cellspacing="0" data-scroll-x="true" scroll-collapse="false">
          <thead id="main_header">
            <tr>
              <th>BMC Address</th>
              <th>System Model</th>
              <th>Serial</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
