<h3 class="text-left text-uppercase bg-primary"><em>Datacenter Zones</em></h3>
<%= link_to 'New DC Zone', new_zone_path, class: 'btn btn-success' %>
<div class="pull-right">
  <p class="time_dock">*All Times are US Central</p>
</div>
<div id="async_wrapper">
  <%= render_async api_zone_path %>
</div>
<%= render '/layouts/loading_overlay' %>
<div id="main_header" class="panel panel-default">
  <div class="well">
    <table id="zone_table" class="table table-striped table-condensed" width="100%" cellspacing="0" data-scroll-x="true" scroll-collapse="false">
      <thead>
        <tr>
          <th>Zone ID</th>
          <th>Zone Name</th>
          <th>Date Added</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="main_table_body" style="display: none">
        <% @zones.reverse_each do |zone| %>
          <tr>
            <td><%= zone.id %></td>
            <td><%= zone.name %></td>
            <td><%= I18n.l zone.created_at, format: :pretty %></td>
            <td><%= link_to 'Details', zone, class: 'btn btn-small btn-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
