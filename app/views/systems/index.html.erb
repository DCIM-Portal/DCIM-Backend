<p id="notice"><%= notice %></p>

<h1>Systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpu model</th>
      <th>Cpu cores</th>
      <th>Cpu threads</th>
      <th>Cpu count</th>
      <th>Ram total</th>
      <th>Disk total</th>
      <th>Disk count</th>
      <th>Os</th>
      <th>Os release</th>
      <th>Sync status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= system.cpu_model %></td>
        <td><%= system.cpu_cores %></td>
        <td><%= system.cpu_threads %></td>
        <td><%= system.cpu_count %></td>
        <td><%= system.ram_total %></td>
        <td><%= system.disk_total %></td>
        <td><%= system.disk_count %></td>
        <td><%= system.os %></td>
        <td><%= system.os_release %></td>
        <td><%= system.sync_status %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

