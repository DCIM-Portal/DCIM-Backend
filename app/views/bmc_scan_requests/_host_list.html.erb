<h3 class="text-left text-uppercase bg-primary"><em>Scanned BMC Hosts</em></h3>
<%= link_to 'New Scan Job', new_bmc_scan_job_path, class: 'btn btn-success' %>
<div class="pull-right">
  <p class="time_dock">*All Times are US Central</p>
</div>
<%= render 'loading_overlay' %>
<div id="main_header" class="panel panel-default">
  <div class="well">
    <table id="host_table" class="table table-striped table-condensed" width="100%" cellspacing="0" data-scroll-x="true" scroll-collapse="false">
      <thead>
        <tr>
          <th>BMC Address</th>
          <th>System Model</th>
          <th>Serial</th>
          <th>Power Status</th>
          <th>Discover Status</th>
          <th>Last Updated</th>
        </tr>
      </thead>
      <tbody id="main_table_body" style="display: none">
        <% @bmc_hosts.reverse_each do |bmc_host| %>
          <tr id="row<%= bmc_host.id %>">
            <td id="td_0_<%= bmc_host.id %>"><%= bmc_host.ip_address %></td>
            <td id="td_1_<%= bmc_host.id %>"><%= bmc_host.system_model %></td>
            <td id="td_1_<%= bmc_host.id %>"><%= bmc_host.serial %></td>
            <td id="td_3_<%= bmc_host.id %>"><%= bmc_host.power %></td>
            <td id="td_4_<%= bmc_host.id %>"><%= bmc_host.is_discovered %></td>
            <td id="td_5_<%= bmc_host.id %>"><%= I18n.l bmc_host.updated_at, format: :pretty %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
